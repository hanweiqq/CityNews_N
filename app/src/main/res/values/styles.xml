<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radioButton_style">
        <item name="android:padding">5dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Theme.MyPageIndicatorDefaults" parent="android:Theme">

        <item name="vpiTabPageIndicatorStyle">@style/Widget.MyTabPageIndicator</item>
    </style>

    <style name="Widget.MyTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textColor">@drawable/tab_textcolor_1</item>
        <item name="android:textSize">22dip</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
